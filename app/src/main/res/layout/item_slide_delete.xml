<?xml version="1.0" encoding="utf-8"?>
<com.zcw.listviewdemo.view.SlideDeleteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideDeleteActivity">

    <TextView
        android:id="@+id/tv_slide_delete_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_slide_delete_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:text="Content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_slide_delete_item_title" />

    <TextView
        android:id="@+id/tv_slide_delete_item_icon"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:background="@color/dialog_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_slide_delete_item_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_slide_delete_item_title" />
</com.zcw.listviewdemo.view.SlideDeleteLayout>